angular.module('roiCalc')
.factory('roiService', function($filter, $http, $rootScope){
	var service = {}
	
	//gets all revenue items
	service.index = function(){
		return $http({
			method: 'GET',
				url: '/api/revenueItem'
		})
	}
	//gets all expense items
	service.index = function(){
		return $http({
			method: 'GET',
				url: 'api/expenseItem'
		})
	}
	
	//creates a new revenue item
	service.create = function(revenueItem){
		return $http({
			method: 'POST',
			url: 'api/revenueItem',
			headers:{
				'Content_type':'application/json'
			},
			data: revenueItem
		})
		.then(function(res){
			$rootScope.$broadcast('addRevenueItem', res.data);
			return res;
		})
	};
	
	//creates a new expense item
	service.create = function(expenseItem){
		return $http({
			method: 'POST',
			url: 'api/expenseItem',
			headers:{
				'Content_type':'application/json'
			},
			data: expenseItem
		})
		.then(function(res){
			$rootScope.$broadcast('addExpenseItem', res.data);
			return res;
		})
	};
	//updates an expense item
	//some code
	
	
	//updates a revenue item
	//some code
	
	//removes an expense item
	//some code
	
	//removes a revenue item
	//some code
	
	
	
	
	
	
});